<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ContactChooseItemViewModel"
            type="com.dugu.addressbook.viewmodel.item.ContactChooseItemViewModel"/>

    </data>

    <LinearLayout
        android:id="@+id/item"
        android:background="@drawable/btn_rectangle_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contact_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/vector_drawable_contact_default_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="@{ContactChooseItemViewModel.nameOrPhone}"
                android:gravity="center_vertical"
                android:textColor="@color/addressbook_bg_black"
                android:textSize="15sp"/>

            <CheckBox
                android:id="@+id/item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:buttonTint="@color/addressbook_actionbar_start_blue"
                android:checked="@={ContactChooseItemViewModel.checked}"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/theme_background_transparent_gray"/>

    </LinearLayout>

</layout>