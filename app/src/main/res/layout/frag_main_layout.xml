                android:background="#00000000">

                <com.dugu.addressbook.assembly.SideBar
                    android:id="@+id/side_bar"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
            </com.dugu.addressbook.assembly.IndexBar>

