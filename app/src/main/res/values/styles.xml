<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/addressbook_actionbar_start_blue</item>
        <item name="colorPrimaryDark">@color/addressbook_actionbar_start_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsingToolbarLayout_expandedTitleText_Style">
        <item name="android:textColor">@color/theme_font_while</item>
    </style>

    <style name="AppToolbar_TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/theme_font_while</item>
    </style>

    <style name="AppBottomNavi_TextStyle">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/theme_font_deep_gray</item>
    </style>

    <style name="AppTabLayoutItem_TextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <!--提示框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否需要标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框的背景-->
        <item name="android:windowBackground">@drawable/bg_loading_shape</item>
        <!--对话框是否悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--默认Window的content背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--dialog遮罩透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--是否需要dialog遮罩-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
